<h1>Listing users</h1>

<table>

  <tr>
    <td>Login</td>
    <td>Email</td>
  </tr>

  <% for user in @users %>
    <tr>
      <td><%= user.login %> </td>
      <td><%= user.email %> </td>
      <td><%= link_to 'Show', user %> </td>
      <td><%= link_to 'Edit', edit_user_path(user) %> </td>
      <td><%= link_to 'Delete', user, :confirm => "Are you sure you want to delete '#{user.login}'?", :method => :delete %> </td>
    </tr>
  <% end %>


</table>

<br/>
<%= link_to 'New User', new_user_path %>